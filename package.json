{
  "name": "eco-drive",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "lint": "next lint",
    "start": "next start -p 4000",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --write */**/*.{js,jsx,json,ts,tsx,scss,css,md}",
    "prepare": "husky",
    "husky": "husky install",
    "husky:pre-commit": "husky add .husky/pre-commit \"npm run pre-commit\"",
    "pre-commit": "yarn tsc --pretty --noEmit && yarn eslint . --fix --max-warnings=0",
    "lint-staged": "yarn tsc --pretty --noEmit && yarn eslint . --fix --max-warnings=0"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.19.1",
    "@chakra-ui/theme": "^3.4.6",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.0.1",
    "axios": "^1.9.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "deepmerge": "^4.3.1",
    "framer-motion": "^12.9.4",
    "husky": "^9.1.7",
    "next": "15.3.1",
    "next-intl": "^4.1.0",
    "next-themes": "^0.4.6",
    "nookies": "^2.5.2",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.57.0",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
